# OBS Multistream Configuration with Social Media Integration & RASA AI Chatbot
# Copy this file to .env and fill in your streaming credentials and social media API keys

# Server Configuration
PORT=3000
RTMP_PORT=1935
NODE_ENV=development

# Streaming Platform Credentials
# Twitch
TWITCH_STREAM_KEY=your_twitch_stream_key_here
TWITCH_RTMP_URL=rtmp://live.twitch.tv/live/
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_ACCESS_TOKEN=your_twitch_access_token

# YouTube
YOUTUBE_STREAM_KEY=your_youtube_stream_key_here
YOUTUBE_RTMP_URL=rtmp://a.rtmp.youtube.com/live2/
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token

# Facebook
FACEBOOK_STREAM_KEY=your_facebook_stream_key_here
FACEBOOK_RTMP_URL=rtmps://live-api-s.facebook.com:443/rtmp/
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_PAGE_ID=your_facebook_page_id
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Instagram
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_USER_ID=your_instagram_user_id
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# TikTok
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_RTMP_URL=your_tiktok_rtmp_url

# LinkedIn
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_PERSON_URN=your_linkedin_person_urn

# Twitter/X
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Discord
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_GUILD_ID=your_discord_guild_id
DISCORD_VOICE_CHANNEL_ID=your_discord_voice_channel_id

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash

# Additional Streaming Platforms
# Kick
KICK_STREAM_KEY=your_kick_stream_key
KICK_RTMP_URL=rtmp://ingest.kick.com/live/

# Rumble
RUMBLE_STREAM_KEY=your_rumble_stream_key
RUMBLE_RTMP_URL=rtmp://d2nvs31859zcd8.cloudfront.net/live/

# Odysee
ODYSEE_STREAM_KEY=your_odysee_stream_key
ODYSEE_RTMP_URL=rtmp://stream.odysee.com/live/

# Custom RTMP Endpoints
CUSTOM_RTMP_URL_1=
CUSTOM_STREAM_KEY_1=
CUSTOM_RTMP_URL_2=
CUSTOM_STREAM_KEY_2=

# RASA AI Chatbot Configuration
RASA_API_URL=http://localhost:5005
RASA_MODEL_PATH=./rasa/models
RASA_TRAINING_DATA_PATH=./rasa/data
RASA_CONFIG_PATH=./rasa/config.yml
RASA_DOMAIN_PATH=./rasa/domain.yml
RASA_ACTIONS_ENDPOINT=http://localhost:5055/webhook
RASA_ENABLE_API=true
RASA_CORS_ORIGINS=['*']

# Chatbot Settings
CHATBOT_ENABLED=true
CHATBOT_RESPONSE_DELAY=1000
CHATBOT_MAX_RESPONSE_LENGTH=280
CHATBOT_DEFAULT_LANGUAGE=en
CHATBOT_CONFIDENCE_THRESHOLD=0.7
CHATBOT_FALLBACK_MESSAGE="Sorry, I didn't understand that. Can you please rephrase?"

# Redis Configuration (for message queuing and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=streamindodo
DB_USER=postgres
DB_PASSWORD=password
DB_PATH=./data/streamindodo.db

# Logging
LOG_LEVEL=info
LOG_FILE=logs/multistream.log
CHAT_LOG_FILE=logs/chat.log
RASA_LOG_FILE=logs/rasa.log

# Stream Settings
MAX_CONCURRENT_STREAMS=10
STREAM_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=5000
CHAT_MESSAGE_RATE_LIMIT=30
CHAT_RECONNECT_INTERVAL=5000

# Security Settings
JWT_SECRET=your_jwt_secret_key_here
API_RATE_LIMIT=100
CORS_ORIGIN=*
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=